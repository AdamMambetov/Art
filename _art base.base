filters:
  and:
    - file.inFolder("content")
formulas:
  name: aliases[0]
  id: |
    file.name.split("(")[1].toString().slice(7).split(")")[0]
  country: file.name.split("(")[1].toString().slice(0, 4)
views:
  - type: cards
    name: Cards
    filters:
      and:
        - Type.startsWith("anime")
        - file.tags.contains("‚ù§")
    order:
      - formula.name
      - Rating
      - Status
      - Episode
      - Year
      - Views
      - Type
    sort:
      - property: created
        direction: ASC
    image: note.Cover
    cardSize: 130
    imageAspectRatio: 1.55
  - type: table
    name: Table
    order:
      - formula.id
      - formula.country
      - formula.name
      - file.name
    sort:
      - property: created
        direction: ASC
    columnSize:
      formula.id: 48
      formula.country: 32
      formula.name: 229
